fn main() {
    // 1. Arithmetic Type Mismatch
    auto i = 1 + 2.0 // Error: operands must be same type

    // 2. Comparison Type Mismatch
    auto c = 1 == "s" // Error: operands must be same type
    // EXPECT: error[E0413]:
    
    // 3. If Condition Type Mismatch
    if (1) {} // Error: condition must be bool

    // 4. Dereference Non-Pointer
    auto x = 10
    auto y = *x // Error: cannot dereference non-pointer

    // 5. Variable Type Mismatch
    auto z: i32 = "hello" // Error: mismatch
    // EXPECT: error[E0409]:
}
