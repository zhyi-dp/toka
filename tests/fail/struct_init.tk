shape Point (x: i32, y: i32)

fn main() {
    // 1. Unknown field
    auto p1 = Point(z = 10, y = 20)
    // EXPECT: Shape 'Point' has no field named 'z'

    // 2. Type mismatch
    auto p2 = Point(x = "hello", y = 20)
    // EXPECT: Type mismatch for field 'x': expected i32, got str

    // 3. Missing field
    auto p3 = Point(x = 10)

    // 4. Duplicate field
    auto p4 = Point(x = 10, y = 20, x = 30)
}
