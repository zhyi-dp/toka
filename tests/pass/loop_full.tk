import std/io::println
import std/memory::assert

fn main() -> i32 {
    auto i# = 0
    while i < 5 {
        println("while: {}", i)
        i# += 1
        if i == 3 { 
            println("i = {}, break", i)
            break 
        }
        if i == 2 { 
            println("i = {}, continue", i)
            continue 
        }
    }

    // Range loop
    i# = 0
    for auto x in [0,1,2] {
        if i == 0 {
            assert(x == 0, "x mismatch")
        }
        if i == 1 {
            assert(x == 1, "x mismatch")
        }
        if i == 2 {
            assert(x == 2, "x mismatch")
        }
        println("for range: {}", x)
        i# += 1
    }

    // Loop as expression with yield
    auto res = loop {
        if i > 10 { 
            println("i = {}, break", i)
            break 42 
        }
        i# += 1
    }
    println("loop result: {}", res)
    assert(res == 42, "loop result mismatch")

    // While as expression with yield
    auto j# = 0
    auto res2 = while j < 10 {
        if j == 5 {
            println("j = {}, break", j)
            break j * 2 
        }
        j# += 1
    }
    or {
        println("or, pass\n")
        pass 0
    }
    println("while result: {}", res2)
    assert(res2 == 10, "while result mismatch")
    return 0
}
