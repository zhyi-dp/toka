{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Toka",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.toka",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.toka",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.toka",
                    "match": "\\\\."
                },
                {
                    "name": "variable.other.interpolation.toka",
                    "match": "\\{[^}]*\\}"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.toka",
                    "match": "\\b(if|else|while|loop|for|match|return|break|continue|pass|in|yield|to|or|await|async|suspend|cancel|defer)\\b"
                },
                {
                    "name": "keyword.other.toka",
                    "match": "\\b(fn|auto|shape|extern|import|pub|mut|new|dyn|move|where|default|delete|del|final|as|is|alloc|free|unsafe)\\b"
                },
                {
                    "name": "constant.language.toka",
                    "match": "\\b(true|false|null|none|self|Self|main)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.primitive.toka",
                    "match": "\\b(i8|u8|i16|u16|i32|u32|i64|u64|f32|f64|bool|void|char|byte|str|Task|Channel|Fn)\\b"
                },
                {
                    "name": "entity.name.type.toka",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.float.toka",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.toka",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "storage": {
            "patterns": [
                {
                    "name": "storage.modifier.mutability.write.toka",
                    "match": "#"
                },
                {
                    "name": "storage.modifier.mutability.null.toka",
                    "match": "\\?"
                },
                {
                    "name": "storage.modifier.mutability.write-null.toka",
                    "match": "!"
                },
                {
                    "name": "storage.modifier.mutability.none.toka",
                    "match": "\\$"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.toka",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.dependency.toka",
                    "match": "<-"
                },
                {
                    "name": "keyword.operator.logical.toka",
                    "match": "&&|\\|\\|"
                },
                {
                    "name": "keyword.operator.morphology.toka",
                    "match": "[\\^~*&]"
                },
                {
                    "name": "keyword.operator.toka",
                    "match": "\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|=|::|\\.|,|:|;"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.toka"
                        }
                    }
                }
            ]
        }
    },
    "scopeName": "source.toka"
}