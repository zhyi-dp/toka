{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Toka",
    "scopeName": "source.toka",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.toka",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.toka",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.toka",
                    "match": "\\\\."
                },
                {
                    "name": "variable.other.interpolation.toka",
                    "match": "\\{[^}]*\\}"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "comment": "Danger zone keyword - Targeted for Red",
                    "name": "keyword.other.unsafe.toka",
                    "match": "\\bunsafe\\b"
                },
                {
                    "comment": "Conditional and branching control",
                    "name": "keyword.control.conditional.toka",
                    "match": "\\b(if|else|match|case)\\b"
                },
                {
                    "comment": "Loop and iteration control",
                    "name": "keyword.control.repeat.toka",
                    "match": "\\b(for|while|loop|to|in)\\b"
                },
                {
                    "comment": "Control flow redirection",
                    "name": "keyword.control.flow.toka",
                    "match": "\\b(break|continue|return|yield|defer|pass)\\b"
                },
                {
                    "comment": "Asynchronous and concurrency control",
                    "name": "keyword.control.async.toka",
                    "match": "\\b(async|await|suspend|cancel)\\b"
                },
                {
                    "comment": "Structural and type definition keywords",
                    "name": "storage.type.toka",
                    "match": "\\b(fn|shape|trait|impl|type|alias|extern|crate)\\b"
                },
                {
                    "comment": "Storage and access modifiers",
                    "name": "storage.modifier.toka",
                    "match": "\\b(pub|mut|const|packed|dyn|final|move|auto)\\b"
                },
                {
                    "comment": "Memory management keywords",
                    "name": "keyword.other.memory.toka",
                    "match": "\\b(new|delete|del|alloc|free)\\b"
                },
                {
                    "comment": "Expression and type-utility keywords",
                    "name": "keyword.operator.expression.toka",
                    "match": "\\b(as|is|where|default|or)\\b"
                },
                {
                    "comment": "Module system",
                    "name": "keyword.other.import.toka",
                    "match": "\\bimport\\b"
                },
                {
                    "comment": "Language constants",
                    "name": "constant.language.toka",
                    "match": "\\b(true|false|none|nullptr)\\b"
                },
                {
                    "comment": "Special language identifiers",
                    "name": "variable.language.special.toka",
                    "match": "\\b(self|Self|main)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "comment": "Primitive and built-in types",
                    "name": "support.type.primitive.toka",
                    "match": "\\b(i8|u8|i16|u16|i32|u32|i64|u64|f32|f64|bool|void|char|byte|str|Task|Channel|Fn)\\b"
                },
                {
                    "comment": "User defined types (PascalCase)",
                    "name": "entity.name.type.toka",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.float.toka",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.toka",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "storage": {
            "patterns": [
                {
                    "comment": "Writable modifier (#) - Targeted for Red",
                    "name": "storage.modifier.mutability.writable.toka",
                    "match": "#"
                },
                {
                    "comment": "Writable and Nullable modifier (!) - Targeted for Red",
                    "name": "storage.modifier.mutability.nullable.writable.toka",
                    "match": "!"
                },
                {
                    "comment": "Nullable modifier (?)",
                    "name": "storage.modifier.nullable.toka",
                    "match": "\\?"
                },
                {
                    "comment": "Immutable modifier ($) - Follows variable color",
                    "name": "punctuation.definition.variable.toka",
                    "match": "\\$"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.toka",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.dependency.toka",
                    "match": "<-"
                },
                {
                    "name": "keyword.operator.logical.toka",
                    "match": "&&|\\|\\|"
                },
                {
                    "name": "keyword.operator.morphology.toka",
                    "match": "[\\^~*&]"
                },
                {
                    "name": "keyword.operator.toka",
                    "match": "==|!=|<=|>=|::|\\+|\\-|\\*|\\/|%|<|>|=|\\.|,|:|;"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "comment": "Function calls",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.toka"
                        }
                    }
                }
            ]
        }
    }
}