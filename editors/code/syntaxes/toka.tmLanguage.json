{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Toka",
    "scopeName": "source.toka",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#storage"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#function-definitions"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "include": "#gate-container-inactive-start"
                },
                {
                    "include": "#gate-container-active-start"
                },
                {
                    "include": "#comment-block-standard"
                },
                {
                    "include": "#comment-line-standard"
                }
            ]
        },
        "gate-container-inactive-start": {
            "comment": "情况 1: /- 开头。关键点：这里不能设 contentName，否则子区域无法摆脱灰色阴影。",
            "begin": "\\/\\-",
            "end": "\\+-\\/",
            "beginCaptures": {
                "0": {
                    "name": "keyword.control.gate.start.inactive.toka"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "keyword.control.gate.terminator.toka"
                }
            },
            "patterns": [
                {
                    "comment": "优先级1：检测翻转符 +/-。一旦匹配，进入高亮模式 (include $self)",
                    "begin": "\\+\\/\\-",
                    "end": "(?=\\+\\/\\-)|(?=\\+-\\/)",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.control.gate.flipper.toka"
                        }
                    },
                    "patterns": [
                        {
                            "include": "$self"
                        }
                    ]
                },
                {
                    "comment": "优先级2：手动染色。匹配任何【不是】翻转符或结束符的内容，染成灰色。",
                    "match": "(?:(?!\\+\\/\\-|\\+-\\/).)+",
                    "name": "comment.block.toka"
                }
            ]
        },
        "gate-container-active-start": {
            "comment": "情况 2: /+ 开头。默认就是高亮，无需 contentName。",
            "begin": "\\/\\+",
            "end": "\\+-\\/",
            "beginCaptures": {
                "0": {
                    "name": "keyword.control.gate.start.active.toka"
                }
            },
            "endCaptures": {
                "0": {
                    "name": "keyword.control.gate.terminator.toka"
                }
            },
            "patterns": [
                {
                    "comment": "优先级1：检测翻转符 +/-。一旦匹配，进入强制灰色模式。",
                    "begin": "\\+\\/\\-",
                    "end": "(?=\\+\\/\\-)|(?=\\+-\\/)",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.control.gate.flipper.toka"
                        }
                    },
                    "contentName": "comment.block.toka",
                    "patterns": []
                },
                {
                    "comment": "优先级2：正常代码高亮",
                    "include": "$self"
                }
            ]
        },
        "comment-block-standard": {
            "name": "comment.block.toka",
            "begin": "/\\*",
            "end": "\\*/"
        },
        "comment-line-standard": {
            "name": "comment.line.double-slash.toka",
            "match": "//.*$"
        },
        "strings": {
            "name": "string.quoted.double.toka",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.toka",
                    "match": "\\\\."
                },
                {
                    "name": "variable.other.interpolation.toka",
                    "match": "\\{[^}]*\\}"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.other.unsafe.toka",
                    "match": "\\bunsafe\\b"
                },
                {
                    "name": "keyword.control.conditional.toka",
                    "match": "\\b(if|else|match|case)\\b"
                },
                {
                    "name": "keyword.control.repeat.toka",
                    "match": "\\b(for|while|loop|to|in)\\b"
                },
                {
                    "name": "keyword.control.flow.toka",
                    "match": "\\b(break|continue|return|yield|defer|pass)\\b"
                },
                {
                    "name": "keyword.control.async.toka",
                    "match": "\\b(async|await|suspend|cancel)\\b"
                },
                {
                    "name": "storage.type.toka",
                    "match": "\\b(fn|shape|trait|impl|type|alias|extern|crate)\\b"
                },
                {
                    "name": "storage.modifier.toka",
                    "match": "\\b(pub|mut|const|packed|dyn|final|move|auto)\\b"
                },
                {
                    "name": "keyword.other.memory.toka",
                    "match": "\\b(new|delete|del|alloc|free)\\b"
                },
                {
                    "name": "keyword.other.toka",
                    "match": "\\b(band|bor|bxor|bnot|bshl|bshr)\\b"
                },
                {
                    "name": "keyword.operator.expression.toka",
                    "match": "\\b(as|is|where|default|or)\\b"
                },
                {
                    "name": "keyword.other.import.toka",
                    "match": "\\bimport\\b"
                },
                {
                    "name": "constant.language.toka",
                    "match": "\\b(true|false|none|nullptr)\\b"
                },
                {
                    "name": "variable.language.special.toka",
                    "match": "\\b(self|Self|main)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "support.type.primitive.toka",
                    "match": "\\b(i8|u8|i16|u16|i32|u32|i64|u64|f32|f64|bool|void|char|byte|str|Task|Channel|Fn)\\b"
                },
                {
                    "name": "entity.name.type.toka",
                    "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.float.toka",
                    "match": "\\b\\d+\\.\\d+\\b"
                },
                {
                    "name": "constant.numeric.integer.toka",
                    "match": "\\b\\d+\\b"
                }
            ]
        },
        "storage": {
            "patterns": [
                {
                    "name": "storage.modifier.mutability.writable.toka",
                    "match": "#"
                },
                {
                    "name": "storage.modifier.mutability.nullable.writable.toka",
                    "match": "!"
                },
                {
                    "name": "storage.modifier.nullable.toka",
                    "match": "\\?"
                },
                {
                    "name": "punctuation.definition.variable.toka",
                    "match": "\\$"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.toka",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.dependency.toka",
                    "match": "<-"
                },
                {
                    "name": "keyword.operator.logical.toka",
                    "match": "&&|\\|\\|"
                },
                {
                    "name": "keyword.operator.morphology.toka",
                    "match": "[\\^~*&]"
                },
                {
                    "name": "keyword.operator.toka",
                    "match": "==|!=|<=|>=|::|\\+|\\-|\\*|\\/|%|<|>|=|\\.|,|:|;"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.toka"
                        }
                    }
                }
            ]
        },
        "function-definitions": {
            "name": "meta.function.definition.toka",
            "begin": "\\b(fn)\\s+",
            "beginCaptures": {
                "1": {
                    "name": "storage.type.toka"
                }
            },
            "end": "(?=\\{|;|$)",
            "patterns": [
                {
                    "name": "entity.name.function.toka",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b"
                },
                {
                    "include": "#operators"
                },
                {
                    "include": "#types"
                }
            ]
        }
    }
}